<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomTab">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bottom_button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BottomTab.Inactive">
        <!--<item name="android:background">@android:color/holo_red_dark</item>-->
        <item name="android:background">@color/disable_grey</item>
    </style>

    <style name="BottomTabImage">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="BottomTabImage.home">
        <item name="android:layout_margin">11dp</item>
    </style>

    <style name="BottomTabText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomTabText.disable">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_header</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">13.5dp</item>
        <item name="android:layout_marginRight">13.5dp</item>
        <item name="android:layout_marginTop">13.5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:radius">15dp</item>
    </style>


</resources>