<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ads="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!--<com.google.android.gms.ads.AdView-->
            <!--android:layout_width="fill_parent"-->
            <!--and-->
            <!-->-->


    <!--</com.google.android.gms.ads.AdView>-->

    <!--fixme commit this-->

    <ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/FrgProfileViewSwitcher"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent">

        <!--child 0 - show info-->
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

            <TextView android:id="@+id/textTotalChallenges" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Total Challenges: 0"/>
            <TextView android:id="@+id/textTotalDistance" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Total Distance: 0"/>
            <TextView android:id="@+id/textTotalTime" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Total Time: 0"/>
            <TextView android:id="@+id/textTotalScore" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Total Score: 0"/>




        </LinearLayout>

        <!--child 1 - login existing user-->
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

            <EditText android:id="@+id/inputExistingEmail" android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="e-mail"/>
            <EditText android:inputType="textPassword" android:gravity="center" android:id="@+id/inputExistingPassword" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="password"/>

            <Button android:id="@+id/buttonLogin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Login"/>


        </LinearLayout>

        <!--child 2 - register or login-->
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

            <TextView android:id="@+id/inputError" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Please fill in all fields" android:textColor="@android:color/holo_red_light" android:textStyle="italic"/>



            <EditText android:id="@+id/inputEmail" android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="e-mail"/>
            <EditText android:id="@+id/inputUsername" android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="username"/>
            <EditText android:id="@+id/inputPassword" android:inputType="textPassword" android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="password"/>




            <TextView android:id="@+id/textLogin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Existing User Login" android:textStyle="italic"/>
            <Button android:id="@+id/buttonRegister" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Register"/>



        </LinearLayout>

    </ViewFlipper>






</LinearLayout>